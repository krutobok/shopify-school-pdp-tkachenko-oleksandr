{%- assign reviews = product.metafields.custom.reviews_json.value -%}
{%- assign limit = section.settings.reviews_count -%}

{% if reviews != blank %}
  <section data-section-id="{{ section.id }}">
    <div>
      {%- if section.settings.heading != blank -%}
        <h2>{{ section.settings.heading | escape }}</h2>
      {%- endif -%}

      <div>
        {%- for review in reviews limit: limit -%}
          <article>
            <div>
              {%- for i in (1..5) -%}
                {%- liquid
                  assign fill_color = 'transparent'
                  if review.rating >= i
                    assign fill_color = '#111111'
                  endif
                -%}
                {% render 'icon-star', fill: fill_color, class: '' %}
              {%- endfor -%}
            </div>

            <div>
              {%- if review.title != blank -%}
                <h3>
                  {{ review.title }}
                </h3>
              {%- endif -%}

              <p>
                {{ review.content }}
              </p>
            </div>

            <footer>
              {%- if review.avatar != blank -%}
                <img
                  src="{{ review.avatar }}"
                  alt="{{ review.author }}"
                  width="40"
                  height="40"
                  loading="lazy"
                >
              {%- endif -%}

              <div>
                <span>
                  {{ review.author }}
                </span>
                <time datetime="{{ review.date }}">
                  {{ review.date }}
                </time>
              </div>
            </footer>
          </article>
        {%- endfor -%}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Reviews"
    },
    {
      "type": "range",
      "id": "reviews_count",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Number of reviews to show",
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Reviews"
    }
  ]
}
{% endschema %}
