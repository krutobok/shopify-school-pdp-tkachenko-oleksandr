{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 757px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- assign reviews = product.metafields.custom.reviews_json.value -%}
{%- assign limit = section.settings.reviews_count -%}

{% if reviews != blank %}
  <section data-section-id="{{ section.id }}" class="section-{{ section.id }}-padding">
    <div class="container-fluid">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-h2 mb-8 md:mb-12 text-center">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        {%- for review in reviews limit: limit -%}
          <article class="flex flex-col gap-6 p-6 rounded-lg border border-border body-large">
            {% render 'stars-rating',
              type: 'single',
              rating: review.rating,
              show_text: false,
              unique_id: forloop.index
            %}

            <p class="grow text-foreground">
              {{ review.content }}
            </p>

            <footer class="flex gap-3">
              {%- if review.avatar != blank -%}
                <img
                  class="rounded-full aspect-square w-[54px]"
                  src="{{ review.avatar }}"
                  alt="{{ review.author }}"
                  width="54"
                  height="54"
                  loading="lazy"
                >
              {%- endif -%}

              <div class="flex flex-col gap-1">
                <span class="text-foreground">
                  {{ review.author }}
                </span>
                <span class="text-secondary">
                  {{ review.city }}
                </span>
              </div>
            </footer>
          </article>
        {%- endfor -%}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Reviews"
    },
    {
      "type": "range",
      "id": "reviews_count",
      "min": 1,
      "max": 9,
      "step": 1,
      "label": "Number of reviews to show",
      "default": 3
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Reviews"
    }
  ]
}
{% endschema %}
