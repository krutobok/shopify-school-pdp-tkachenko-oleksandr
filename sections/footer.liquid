<footer class="bg-background pt-16 pb-6 border-border">
  <div class="container-fluid">
    <div class="flex flex-col md:flex-row md:gap-8 mb-12 flex-wrap">
      {% for block in section.blocks %}
        <div class="grow border-t last:border-b border-border md:border-none" {{ block.shopify_attributes }}>
          {% if block.type == 'link_list' %}
            <details class="py-4 md:details-content:contents md:py-0">
              <summary class="flex justify-between items-center cursor-pointer list-none text-foreground font-medium body-large mb-0 [details[open]_&]:mb-4 transition-all md:mb-4 md:cursor-auto">
                {{ block.settings.heading }}
                <span class="transform transition-transform duration-300 [details[open]_&]:rotate-180 text-foreground md:hidden">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="15"
                    height="15"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M6 9l6 6 6-6"/>
                  </svg>
                </span>
              </summary>
              <div class="animate-fade-in ">
                <ul class="flex flex-col gap-3">
                  {% for link in block.settings.menu.links %}
                    <li>
                      <a
                        href="{{ link.url }}"
                        class="link-animated body-medium text-secondary hover:text-foreground"
                      >
                        {{ link.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </details>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div class="flex flex-col md:flex-row justify-start items-start md:items-center gap-3 md:gap-8">
      <p class="text-sm text-secondary">
        &copy;&nbsp;{{ 'now' | date: '%Y' }}&nbsp;{{ shop.name }}. All rights reserved.
      </p>

      {% for link in section.settings.bottom_links.links %}
        <a
          href="{{ link.url }}"
          class="relative body-medium text-secondary hover:text-foreground transition-colors group"
        >
          {{ link.title }}
          <span
            class="absolute left-0 bottom-0 h-px w-0 bg-current transition-all duration-500 group-hover:w-full"
          ></span>
        </a>
      {% else %}
        <a href="#" class="link-animated body-medium text-secondary hover:text-foreground">Terms of Use</a>
        <a href="#" class="link-animated body-medium text-secondary hover:text-foreground">Privacy & Cookie Policy</a>
        <a href="#" class="link-animated body-medium text-secondary hover:text-foreground">Privacy & Cookie Setting</a>
      {% endfor %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "bottom_links",
      "label": "Bottom Legal Links",
      "info": "Menu for 'Terms', 'Privacy', etc."
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link_list",
          "settings": {
            "heading": "Resources"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Help"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Company"
          }
        }
      ]
    }
  ]
}
{% endschema %}
