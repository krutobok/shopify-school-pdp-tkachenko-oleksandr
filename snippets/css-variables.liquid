{% style %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    --font-body-family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-body-style: {{ settings.type_primary_font.style }};
    --font-body-weight: {{ settings.type_primary_font.weight }};

    --page-width: {{ settings.max_page_width }}px;
    --page-margin: {{ settings.page_margin }}px;

    {% assign default_scheme = settings.color_schemes | first %}

    --color-bg: {{ default_scheme.settings.bg_color }};
    --color-text: {{ default_scheme.settings.text_color }};
    --color-btn-bg: {{ default_scheme.settings.btn_bg }};
    --color-btn-text: {{ default_scheme.settings.btn_text }};
    --color-btn-border: {{ default_scheme.settings.btn_border }};
    --color-btn-secondary-hover: {{ default_scheme.settings.btn_secondary_hover }};
    --color-secondary: {{ default_scheme.settings.color_secondary }};
    --color-border: {{ default_scheme.settings.color_border }};
  }

  {% for scheme in settings.color_schemes %}
    .color-{{ scheme.id }} {
      --color-bg: {{ scheme.settings.bg_color }};
      --color-text: {{ scheme.settings.text_color }};
      --color-btn-bg: {{ scheme.settings.btn_bg }};
      --color-btn-text-raw: {{ scheme.settings.btn_text}};
      --color-btn-border-raw: {{ scheme.settings.btn_border }};
      --color-btn-secondary-hover-raw: {{ scheme.settings.btn_secondary_hover }};
      --color-secondary-raw: {{ scheme.settings.color_secondary }};
      --color-border-raw: {{ scheme.settings.color_border }};
      --color-background: var(--color-bg);
      --color-foreground: var(--color-text);

      --color-btn: var(--color-btn-bg);
      --color-btn-text: var(--color-btn-text-raw);
      --color-btn-border: var(--color-btn-border-raw);
      --color-btn-secondary-hover: var(--color-btn-secondary-hover-raw);

      --color-secondary: var(--color-secondary-raw);
      --color-border: var(--color-border-raw);

      color: var(--color-foreground);
      background-color: var(--color-background);
    }
  {% endfor %}

  body {
    font-family: var(--font-body-family);
    font-weight: var(--font-body-weight);
    font-style: var(--font-body-style);
    background-color: var(--color-bg);
    color: var(--color-text);
  }
{% endstyle %}
