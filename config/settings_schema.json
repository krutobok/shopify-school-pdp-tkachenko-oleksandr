[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "poppins_n4",
        "label": "Primary Font"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "Page width",
        "options": [
          {
            "value": "1320",
            "label": "Standard (1320px)"
          },
          {
            "value": "1440",
            "label": "Wide (1440px)"
          }
        ],
        "default": "1320"
      },
      {
        "type": "range",
        "id": "page_margin",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Page margin (mobile)",
        "default": 24
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "bg_gradient",
            "label": "Background Gradient"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "default": "#111111"
          },
          {
            "type": "color",
            "id": "btn_bg",
            "label": "Button Background",
            "default": "#111111"
          },
          {
            "type": "color",
            "id": "btn_text",
            "label": "Button Text",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "btn_border",
            "label": "Button Border",
            "default": "#111111"
          },
          {
            "type": "color",
            "id": "btn_secondary_hover",
            "label": "Secondary Button Hover",
            "default": "#CACACB"
          },

          {
            "type": "color",
            "id": "color_secondary",
            "label": "Secondary Text",
            "default": "#737373"
          },
          {
            "type": "color",
            "id": "color_border",
            "label": "Borders",
            "default": "#EBEBEB"
          }
        ],
        "role": {
          "background": {
            "solid": "bg_color",
            "gradient": "bg_gradient"
          },
          "text": "text_color",
          "links": "text_color",
          "icons": "text_color",
          "primary_button": "btn_bg",
          "on_primary_button": "btn_text",
          "primary_button_border": "btn_border",
          "secondary_button": "bg_color",
          "on_secondary_button": "text_color",
          "secondary_button_border": "color_border"
        }
      }
    ]
  }
]
